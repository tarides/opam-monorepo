(library
 (name dune_unit_tests)
 (modules :standard \ vcs_tests findlib_tests)
 (libraries
  ocaml_config
  spawn
  dune_tests_common
  stdune
  dune_util
  dune_engine
  dune_rules
  fiber
  dune_lang
  memo
  test_scheduler
  ;; This is because of the (implicit_transitive_deps false)
  ;; in dune-project
  ppx_expect.config
  ppx_expect.config_types
  ppx_expect.common
  base
  ppx_inline_test.config)
 (inline_tests)
 (preprocess
  (pps ppx_expect)))

